##CTAFCONF

$action=$1

#recursive replace all occurence by another in all file of the current folder
replacer ()
{
  local arg1=$1
  local arg2=$2

  recurse_file . | grep -v 'replace.bak' | while read file; do
    perl -pi.replace.bak -e "$action" "$file"
  done
}


recurse_file ()
{
  local arg="$1"
  local i=""
  local fn=""

  ls $arg 2>/dev/null | while read i; do
    fn=$arg/$i
    if [ -d $fn ]; then
      recurse_file $fn;
    elif [ -f $fn ]; then
      echo "$fn";
    fi;
  done;
}

if [ x$action = x-h ] || [ x$action = x ] ; then
  echo "usage: replacer perlregexp"
  echo "example to replace foo by bar: replacer s/foo/bar/"
  echo "or                           : replacer s!foo!bar!"
  exit 1
fi

replacer .
